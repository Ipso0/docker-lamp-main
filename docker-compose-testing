version: "3"
services:
    www:
        image: php:7.2-apache
        build: .
        container_name: www
        ports: 
            - "127.0.0.1:8080:80"
        volumes:
            - ./www:/var/www/html
        links:
            - db1
            
        networks:
            - default

    db1:
        image: mysql:5.6
        container_name: base_de_datos
        ports: 
            - "127.0.0.1:8306:8306"
        command: 
            - --default-authentication-plugin=mysql_native_password
            - --character-set-server=utf8
            - --SET @@GLOBAL.sql_mode=ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER
        environment:
            MYSQL_DATABASE: db1
            MYSQL_USER: user
            MYSQL_PASSWORD: test
            MYSQL_ROOT_PASSWORD: test 
        volumes:
            - ./dump/admin_instituto.sql:/docker-entrypoint-initdb.d/initdb.sql
            
        networks:
            - default
    db2:
        image: mysql:5.6
        container_name: base_de_datos2
        ports: 
            - "127.0.0.1:8307:8306"
        command: 
            - --default-authentication-plugin=mysql_native_password
            - --character-set-server=utf8
            - --SET @@GLOBAL.sql_mode=ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER
        environment:
            MYSQL_DATABASE: db2
            MYSQL_USER: user
            MYSQL_PASSWORD: test
            MYSQL_ROOT_PASSWORD: test 
        volumes:
            - ./dump/admin_loginstituto.sql:/docker-entrypoint-initdb.d/initdb.sql
            
        networks:
            - default


    phpmyadmin:
        image: phpmyadmin/phpmyadmin
        container_name: phpmyadmin
        links:
            - db1:db1
        ports:
            - "127.0.0.1:8000:8080"
        environment:
            MYSQL_USER: user
            MYSQL_PASSWORD: test
            MYSQL_ROOT_PASSWORD: test 
volumes:
    persistent:
