version: "3"
services:
    db1:
        image: mysql:5.6
        container_name: base_de_datos
        ports: 
            - "127.0.0.1:3306:3306"
        command: 
            - --default-authentication-plugin=mysql_native_password
            - --character-set-server=utf8
        environment:
            MYSQL_DATABASE: db1
            MYSQL_USER: user
            MYSQL_PASSWORD: test
            MYSQL_ROOT_PASSWORD: test 
        volumes:
            - ./dump:/docker-entrypoint-initdb.d
            - ./conf:/etc/mysql/conf.d
            - persistent:/var/lib/mysql
            
        networks:
            - default

    www:
        image: php:7.2-apache
        build: .
        container_name: www
        ports: 
            - "127.0.0.1:80:80"
        volumes:
            - ./www:/var/www/html
        links:
            - db1
            
        networks:
            - default

    phpmyadmin:
        image: phpmyadmin/phpmyadmin
        container_name: phpmyadmin
        links:
            - db1:db1
        ports:
            - "127.0.0.1:8000:80"
        environment:
            MYSQL_USER: user
            MYSQL_PASSWORD: test
            MYSQL_ROOT_PASSWORD: test 
volumes:
    persistent:
